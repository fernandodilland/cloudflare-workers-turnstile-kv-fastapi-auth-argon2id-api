		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login successful\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"    \r",
							"    const responseJson = pm.response.json();\r",
							"    \r",
							"    pm.expect(responseJson.success).to.be.true;\r",
							"    \r",
							"    if (responseJson.token) {\r",
							"        pm.environment.set(\"jwt_token\", responseJson.token);\r",
							"        console.log(\"JWT Token guardado:\", responseJson.token);\r",
							"    }\r",
							"    \r",
							"    if (responseJson.expires_in) {\r",
							"        pm.environment.set(\"token_expires_in\", responseJson.expires_in);\r",
							"        console.log(\"Token expira en:\", responseJson.expires_in, \"segundos\");\r",
							"    }\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
